{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true,
    "detox/detox": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb", "react-native", "prettier", "prettier/react"],
  "plugins": ["react", "react-native", "prettier", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": "off",
    "import/no-extraneous-dependencies": "off"
  },
  "settings": {
    "import/resolver": { "babel-module": {} }
  }
}
